# Systemd unit file for orlo

[Unit]
Description=Orlo Web Interface
After=network.target
ConditionPathExists=/usr/share/python/python-orloweb/bin/gunicorn

[Service]
Type=simple
User=orlo
Group=orlo
ExecStart=/usr/share/python/python-orloweb/bin/gunicorn -w 4 -b 127.0.0.1:8080 orloWeb:app

[Install]
WantedBy=multi-user.target
